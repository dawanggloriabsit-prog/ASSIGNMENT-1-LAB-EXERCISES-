#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int choice;
    double radius, length, width;

    cout << "Menu:\n1. Compute Area of Circle\n2. Compute Area of Rectangle\n3. Exit\n";
    cout << "Enter your choice: ";
    cin >> choice;

    switch (choice) {
        case 1:
            cout << "Enter radius: ";
            cin >> radius;
            cout << "Area of Circle: " << M_PI * radius * radius;
            break;
        case 2:
            cout << "Enter length and width: ";
            cin >> length >> width;
            cout << "Area of Rectangle: " << length * width;
            break;
        case 3:
            cout << "Goodbye!";
            break;
        default:
            cout << "Invalid choice.";
    }

    return 0;
}
